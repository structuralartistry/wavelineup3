<!DOCTYPE html>
<html>
<head>
  <title>Wavelineup3</title>
  <%= stylesheet_link_tag :all %>
  
  <%= javascript_include_tag 'jquery-1.4.2.min' %>
  <%= javascript_include_tag 'jquery-ui-1.8.5.custom.min' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'rails' %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id='container'>
  <table width="100%" class="nav_table">
    <tr>
      <td class="wavelineup"><span class="wavelineup">&nbsp;WaveLineup&nbsp;</span></td> 
      <td align="right">
        <% if current_user %>
          <% if current_user.practice %><%= link_to current_user.practice.name, edit_practice_path(current_user.practice.id) %> | <% end %>
          <%= link_to current_user.email, edit_user_path(:current) %> |
          <%= link_to 'Logout', logout_path %>    
        <% else %>
          <% if !(controller_name=='practices' && action_name=='new') %>
            <%= link_to 'Create My Practice', new_practice_path %>
          <% end %>
          <% if controller_name != 'user_sessions' && action_name != 'new' %> 
            |
            <%= link_to 'Login', login_path %>
          <% end %>
        <% end %>
      </td>
      <td align="right">&nbsp;</td>
	  </tr>
	  <tr>
	    <td style="height: 5px;" colspan="13" class="header_bottom"></td>
	  </tr>
	  <% if flash[:notice] %>
	  <tr>
	    <td>
	      <span id='flash_notice'><%= flash[:notice] %></span>
	    </td>
	  </tr>
	  <% end %>
	  <tr>
	    <td>
	      <%= yield %>
	    </td>  
	  </td>
	</table>
</div>

</body>
</html>
