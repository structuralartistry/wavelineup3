<!DOCTYPE html>
<html>
<head>
  <title>WaveLineup3<%= ' ::: ' + current_user.practice.name if current_user && current_user.practice %><%= ' ::: ' + current_user.email if current_user %></title>

	<%= include_stylesheets :common %>
	<%= include_javascripts :common %>
  <%= csrf_meta_tag %>

	<% if flash[:notice] %>
	<script language='javascript'>
		$(document).ready(function() {
			<%= fading_flash_notice %>
		});
	</script>
	<% end %>

</head>
<body>
  <div id='container'>
  	<table style='width: 800px;'>
      <tr valign="top">
        <td valign="top" style="width: 15px;">
          <% if current_user %>
    		    <%= render :partial => "layouts/left_column" %>
    		  <% end %>
        </td>
        <td style="width: 98%;">
          <div id="new_practice_member" class="selector hidden">
          </div>
          <div id="practice_member_selector" class="selector hidden">
						<%= render :partial => "layouts/practice_member_selector" %>
     	    </div>
          <div id="lineup_selector" class="selector hidden">
						<%= render :partial => "layouts/lineup_selector" %>
          </div>
					<div id="feedback_support" class="selector hidden"></div>
     	    <div id="main_frame">
            <%= yield %>
          </div>
        </td>
      </tr>
    </table>
  </div>
  <div id='footer'>
    <table>
      <tr>
        <td>
          Copyright 2009-<%= DateTime.now.year %> by <%= link_to 'StructuralArtistry', 'http://structuralartistry.com' %>
        </td>
        <td style='width: 3.5in'>
        </td>
        <td style='float: right;'>
         <%= link_to 'Terms of Service', '/terms_of_service', :target => 'new' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        </td>
        <td>
          <%= link_to 'Privacy Policy', '/privacy_policy', :target => 'new' %>
        </td>
      </tr>
    </table>
  </div>
</body>
</html>
