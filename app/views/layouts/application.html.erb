<!DOCTYPE html>
<html>
<head>
  <title>Wavelineup3</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id='container'>
  <div id='user_nav'>
    <% if current_user %>
      <% if current_user.practice %><%= link_to current_user.practice.name, edit_practice_path(current_user.practice.id) %> | <% end %>
      <%= link_to current_user.email, edit_user_path(:current) %> |
      <%= link_to 'Logout', logout_path %>    
    <% else %>
      <%= link_to 'Create My Practice', new_practice_path %>
      <% if controller_name != 'user_sessions' && action_name != 'new' %> 
        |
        <%= link_to 'Login', login_path %>
      <% end %>
    <% end %>
  </div>
  <%= flash[:notice] %>
  <%= yield %>
</div>

</body>
</html>
