<!DOCTYPE html>
<html>
<head>
  <title>WaveLineup3<%= ' ::: ' + current_user.practice.name if current_user && current_user.practice %><%= ' ::: ' + current_user.email if current_user %></title>
  
	<%= include_stylesheets :common %>
	<%= include_javascripts :common %>
  <%= csrf_meta_tag %>
	
	<% if flash[:notice] %>
	<script language='javascript'>
		$(document).ready(function() {
			<%= fading_flash_notice %>
		});
	</script>
	<% end %>

</head>
<body>
  <div id='container'>
  	<table style='width: 800px;'>
      <tr>
        <td colspan="2">
          <table class="nav_table">
            <tr>
              <td class='wavelineup'><span class='wavelineup'>&nbsp;WaveLineup&nbsp;</span></td>
              <% if current_user %>
								<td><%= button_to 'Home', home_url, :method => :get, :class => 'bold selector_cell selector_cell_submit', :style => 'width: 2.0in;' %></td>
                <% if current_user.practice %>
									<td><%= button_to 'Edit Practice', edit_practice_url(current_user.practice.id), :method => :get, :class => 'bold selector_cell selector_cell_submit', :style => 'width: 2.0in;' %></td>
                <% end %>
								<td><%= button_to 'Edit User', edit_user_url(:current), :method => :get, :class => 'bold selector_cell selector_cell_submit', :style => 'width: 2.0in;' %></td>
                <td><%= button_to 'Logout', logout_url, :method => :get, :class => 'bold selector_cell selector_cell_submit', :style => 'width: 2.0in;' %></td>
              <% else %>
                <% if !(controller_name=='practices' && action_name=='new') %>
									<td><%= button_to 'Create My Practice', new_practice_url, :method => :get, :class => 'bold selector_cell selector_cell_submit', :style => 'width: 2.0in;' %></td>
                <% end %>
                <% if controller_name != 'user_sessions' && action_name != 'new' %> 
									<td><%= button_to 'Login', login_url, :method => :get, :class => 'bold selector_cell selector_cell_submit', :style => 'width: 2.0in;' %></td>
                <% end %>
              <% end %>
        	  </tr>
        	</table>
      	</td>
      </tr>
      <tr valign="top">
        <td valign="top" style="width: 15px;">
          <% if current_user %>
    		    <%= render :partial => "layouts/left_column" %>
    		  <% end %>
        </td>
        <td style="width: 98%;">        
          <div id="new_practice_member" class="selector hidden">
          </div>
          <div id="practice_member_selector" class="selector hidden">
						<%= render :partial => "layouts/practice_member_selector" %>
     	    </div>
					<div id="feedback_support" class="selector hidden"></div>
					<% if !current_user %>
						<div id="notices"></div>
					<% end %>
     	    <div id="main_frame">
            <%= yield %>
          </div>
        </td>
      </tr>
    </table>
  </div>
</body>
</html>
