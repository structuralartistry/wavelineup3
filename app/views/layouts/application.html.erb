<!DOCTYPE html>
<html>
<head>
  <title>Wavelineup3</title>
  <%= stylesheet_link_tag :all %>
  
  <%= javascript_include_tag 'jquery-1.4.2.min' %>
  <%= javascript_include_tag 'jquery-ui-1.8.5.custom.min' %>
  <%= javascript_include_tag 'jquery.utils.min' %>
  <%= javascript_include_tag 'bindows_gauges/bindows_gauges.js' %>
  <%= javascript_include_tag 'bindows_gauges/gauge2.ie.js' %>
  <%= javascript_include_tag 'bindows_gauges/gauge2.js' %>
  <%= javascript_include_tag 'ajax' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'travel_card'%>
  <%= javascript_include_tag 'rails' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id='container'>
  	<table>
      <tr>
        <td colspan="2">
          <table class="nav_table">
            <tr>
              <td class='wavelineup'><span class='wavelineup'>&nbsp;WaveLineup&nbsp;</span></td>
              <% if current_user %>
								<td><%= button_to 'Home', home_url, :method => :get, :class => 'selector_cell_edit', :style => 'width: 2.0in;' %></td>
                <% if current_user.practice %>
									<td><%= button_to current_user.practice.name, edit_practice_url(current_user.practice.id), :method => :get, :class => 'selector_cell_edit', :style => 'width: 2.0in;' %></td>
                <% end %>
								<td><%= button_to current_user.email, edit_user_url(:current), :method => :get, :class => 'selector_cell_edit', :style => 'width: 2.0in;' %></td>
                <td><%= button_to 'Logout', logout_url, :method => :get, :class => 'selector_cell_edit', :style => 'width: 2.0in;' %></td>
              <% else %>
                <% if !(controller_name=='practices' && action_name=='new') %>
									<td><%= button_to 'Create My Practice', new_practice_url, :method => :get, :class => 'selector_cell_edit', :style => 'width: 2.0in;' %></td>
                <% end %>
                <% if controller_name != 'user_sessions' && action_name != 'new' %> 
                  |
									<td><%= button_to 'Login', login_url, :method => :get, :class => 'selector_cell_edit', :style => 'width: 2.0in;' %></td>
                <% end %>
              <% end %>
        	  </tr>
        	  <tr>
        	    <td style="height: 5px;" colspan="13" class="header_bottom"></td>
        	  </tr>
        	</table>
      	</td>
      </tr>
      <tr valign="top">
        <td valign="top" style="width: 15px;">
          <% if current_user %>
    		    <%= render :partial => "layouts/left_column" %>
    		  <% end %>
        </td>
        <td style="width: 98%;">        
          <div id="new_practice_member" class="selector hidden" style="display: none;">
          </div>
          <div id="practice_member_selector" class="selector hidden" style="display: none;">
            <%= render :partial => "layouts/practice_member_selector" %>
     	    </div>
     	    <div id="notices">
     	      <p id="flash_notice"><%= flash[:notice] %></p>
     	    </div>
     	    <div id="main_frame">
            <%= yield %>
          </div>
        </td>
      </tr>
    </table>
  </div>
</body>
</html>
