<%= form_for(@practice) do |f| %>
  <% if @practice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@practice.errors.count, "error") %> prohibited this practice from being saved:</h2>

      <ul>
      <% @practice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <br />

	<p class='label'>Practice Information</p>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
		<%= f.submit 'Submit', :class => 'selector_cell_save' if action_name == 'edit' %>
  </div>
  
  <% if action_name != 'edit' %>
    <p class='label'>Create your login</p>
    <p>You will be able to create more users for your practice once your registration is complete.</p>
    <%= f.fields_for :users do |u| %>
      <div class="field">
        <%= u.label :email %><br />
        <%= u.text_field :email %>
      </div>
      <div class="field">
        <%= u.label :password %><br />
        <%= u.password_field :password %>
      </div>
      <div class="field">
        <%= u.label :password_confirmation %><br />
        <%= u.password_field :password_confirmation %>
      </div>
    <% end %>
		<div class="actions">
	    <%= f.submit 'Submit', :class => 'selector_cell_save', :style => 'float: left' %>
	  </div>
  <% end %>
  
<% end %>

<% if action_name == 'edit' %>
  <p class='label'>Manage Users</p>
  <%= render :partial => '/users/index' %>
<% end %>

<% if action_name != 'edit' %>
	<%= button_to 'Cancel', login_path, :method => :get, :class => 'selector_cell_edit', :style => 'float: left;' %>
<% end %>



