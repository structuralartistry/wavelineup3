<h1>Users</h1>
<br />
<table>
  <tr>
    <th>Email</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr id="<%= user.email.gsub(/@.*/, '') %>">
    <td><%= user.email %></td>  
    <td><%= button_to 'Delete', user, :confirm => "Are you sure?", :method => :delete, :class => 'selector_cell_delete' %></td>
  </tr>
<% end %>
</table>

<br />
<%= button_to 'New User', new_user_path, :method => :get, :class => 'selector_cell_add' %>