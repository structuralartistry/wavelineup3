<script language='javascript'>
  function submit_request(){
    var filter_practice_members = $('#filter_practice_members').val();
    var lookback_days = $('#lookback_days').val();
    var url = '/reports/show?filter_practice_members=' + filter_practice_members + '&lookback_days=' + lookback_days;
    window.location.href = url;
  }
</script>

<h1>Reports</h1><br>
  <table id="current_visit" class="selector_table">
    <tr>
      <td colspan='2' class="half_height label">Filter Practice Members</td>
    </tr>
    <tr>
      <td style='width: 1.0in' id="filter_practice_members_all" class="selector_cell selector_cell_text_three_character current_selected">All</td>
      <td style='width: 3.0in' id="filter_practice_members_single" class="selector_cell selector_cell_text_three_character">Individual</td>
    </tr>
  </table>
  <table id="current_visit" class="selector_table">
    <tr>
      <td colspan='5' class="half_height label">Lookback Period</td>
    </tr>
    <tr>
      <td style='width: 1.0in' id="lookback_days_1" class="selector_cell selector_cell_text_three_character current_selected">1 Day</td>
      <td style='width: 1.0in' id="lookback_days_7" class="selector_cell selector_cell_text_three_character">7 Days</td>
      <td style='width: 1.0in' id="lookback_days_30" class="selector_cell selector_cell_text_three_character">30 Days</td>
      <td style='width: 1.0in' id="lookback_days_60" class="selector_cell selector_cell_text_three_character">60 Days</td>
      <td style='width: 1.0in' id="lookback_days_90" class="selector_cell selector_cell_text_three_character">90 Days</td>
    </tr>
  </table>
  <br>
  <table id="current_visit" class="selector_table">
    <tr>
	    <td><%= button_to 'Submit', '#', :method => :get, :onclick => 'submit_request(); return false;', :class => 'bold selector_cell selector_cell_nav', :style => 'width: 1.5in;' %></td>
      <td></td>
    </tr>
  </table>

<%= hidden_field_tag :filter_practice_members, 'all' %>
<%= hidden_field_tag :lookback_days, '1' %>
