<%= form_tag '/logins' do |f| %>
  <% if @user && !@user.active %>
    <%= render :partial => 'activations/reactivate' %>
  <% end %>

  <br />

  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, '', :size => 22 %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password, '', :size => 22 %>
  </div>
  <div class="actions">
    <%= submit_tag 'Submit', :class => 'selector_cell_submit' %>
  </div>
<% end %>
<br />
<%= button_to 'Forgot Password?', new_password_reset_url, :method => :get, :class => 'selector_cell_submit', :style => 'width: 3in;' %>

