<%= form_for(@user_session) do |f| %>
  <% if @user_session.errors.any? %>
    <div id="error_explanation">
      <h2>You were not able to be logged in for these reasons:</h2>

      <ul>
      <% @user_session.errors.full_messages.each do |msg| %>
        <% if msg == "Your account is not active" %>
          <%= render :partial => 'activations/reactivate.html.erb', :locals => { :email => params[:user_session][:email] } %>
        <% else %>
         <li><%= msg %></li>
        <% end %>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', :class => 'selector_cell_save' %>
  </div>
  <div>
    <%= link_to "Forgot Password?", reset_password_path %>
  </div>
<% end %>
