<script language='javascript'>

	$(document).ready(function() {
		set_practice_room_section_and_buttons('practice_room_<%= params[:visible_section] %>');
	});

	function set_practice_room_section_and_buttons(section_id) {		
		// hide other sections
		$('#practice_room_visit').hide();
		$('#practice_room_travel_card').hide();
		$('#practice_room_visit_list').hide();
		
		// unhighlight other buttons
		$('#practice_room_visit_show_selector_cell').removeClass('current_selected');
		$('#practice_room_travel_card_show_selector_cell').removeClass('current_selected');
		$('#practice_room_visit_list_show_selector_cell').removeClass('current_selected');
		
		// highlight button
		$('#' + section_id + '_show_selector_cell').addClass('current_selected');

		$('#' + section_id).show();		
	}

</script>

<table class="selector_table" width="0.75in">
  <tr>
	  <td id="practice_room_visit_show_selector_cell" class="bold selector_cell selector_cell_nav selector_cell_text_single_character current_selected" onclick="set_practice_room_section_and_buttons('practice_room_visit');">V</td>
	</tr>
	<tr>
	  <td id="practice_room_travel_card_show_selector_cell" class="bold selector_cell selector_cell_nav selector_cell_text_single_character" onclick="set_practice_room_section_and_buttons('practice_room_travel_card');">TC</td>
	</tr>
	<tr>
		<td id="practice_room_visit_list_show_selector_cell" class="bold selector_cell selector_cell_nav selector_cell_text_single_character" onclick="set_practice_room_section_and_buttons('practice_room_visit_list');">VL</td>
	</tr>
</table>